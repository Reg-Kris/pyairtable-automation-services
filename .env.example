# PyAirtable Automation Services Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8006
DEBUG=false
LOG_LEVEL=INFO
WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-in-production-generate-with-openssl-rand-hex-32
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=sqlite:///./automation_services.db
# DATABASE_URL=postgresql://username:password@localhost:5432/automation_services
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# File Storage Configuration
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt,.csv,.xlsx,.xls

# Workflow Configuration
MAX_WORKFLOW_EXECUTIONS=1000
EXECUTION_TIMEOUT=3600  # 1 hour in seconds
SCHEDULER_INTERVAL=60   # seconds

# PyAirtable Configuration
AIRTABLE_API_KEY=your-airtable-api-key
AIRTABLE_BASE_ID=your-airtable-base-id

# Background Tasks
TASK_QUEUE_SIZE=100
TASK_WORKER_COUNT=4

# File Processing
TEXT_EXTRACTION_TIMEOUT=300  # 5 minutes
PDF_MAX_PAGES=1000

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30